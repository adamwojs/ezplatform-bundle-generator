{
  "name": "ibexa/bundle-generator",
  "license": "GPL-2.0-only",
  "description": "Symfony Bundle generator for Ibexa DXP based projects",
  "keywords": [
    "ibexa", "symfony"
  ],
  "type": "project",
  "require": {
    "php": "^7.3",
    "symfony/console": "^4.3",
    "symfony/filesystem": "^4.3"
  },
  "require-dev": {
    "composer/composer": "^1.0@dev",
    "phpunit/phpunit": "^8.2",
    "ezsystems/ezplatform-code-style": "^0.4.0"
  },
  "bin": ["bin/ibexa-bundle-generator"],
  "autoload": {
    "psr-4": {
      "Ibexa\\Platform\\Bundle\\BundleGenerator\\": "src/bundle",
      "Ibexa\\Platform\\Contracts\\BundleGenerator\\": "src/contracts",
      "Ibexa\\Platform\\BundleGenerator\\": "src/lib"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ibexa\\Platform\\Tests\\Bundle\\BundleGenerator\\": "tests/bundle",
      "Ibexa\\Platform\\Tests\\Integration\\BundleGenerator\\": "tests/integration",
      "Ibexa\\Platform\\Tests\\BundleGenerator\\": "tests/lib"
    }
  },
  "scripts": {
    "fix-cs": "@php ./vendor/bin/php-cs-fixer fix -v --show-progress=estimating"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  }
}
